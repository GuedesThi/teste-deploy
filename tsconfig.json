{
  "compilerOptions": {
    "target": "es2022",
    "outDir": "./js",
    "noEmitOnError": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },

  "include": ["src/**/*"]
}
